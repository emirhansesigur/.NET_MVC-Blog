@model AdminBlog.Models.Author
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-6 offset-md-3 d-flex align-items-center justify-content-center vh-100">
        <form asp-action="Index" asp-controller="Home" method="post">
            <div class="form-group">
                <h3>Kullanıcı ve ya Admin Girişi</h3>
                <input type="text" asp-for="Email" class="form-control" placeholder="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="password" asp-for="Password" class="form-control" placeholder="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-secondary">Login</button>
        </form>

    </div>
</div>

