@using Microsoft.AspNetCore.Http;
@model IEnumerable<AdminBlog.Models.Category>

@{
    ViewData["Title"] = "Category";
}

@{
    int? id = Context.Session.GetInt32("id");
}

<button type="button" onclick="$('#CategoryModal').modal('show')" class="btn btn-primary">Kategori Ekle</button>

<table class="table table-hover">
    <thead>
    <th scope="col">Id</th>
    <th scope="col">Name</th>
    <th scope="col"></th>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>
                    <a class="btn btn-danger" asp-route-id="@item.Id" asp-controller="Category" asp-action="DeleteCategory">Sil</a> @* TAG HELPER *@
                    <button class="btn btn-secondary" onclick="updateForm(@item.Id)" type="button">Güncelle</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="modal" id="CategoryModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Buradan Kategori Eklenir :</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-controller="Category" asp-action="AddCategory" autocomplete="off" method="POST">
                <div class="modal-body">
                    <div class="form-group">
                        @*name = "Id" olarak değil de model gönderecek şekilde yap.*@
                        <input type="hidden" name="Id" id="Id" class="form-control">
                        <input type="text" name="Name" id="Name" class="form-control">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" onclick="clearForm()" data-dismiss="modal">KAPATT</button>
                    <button type="submit" id="saveBtn" class="btn btn-primary">EKLEE</button>
                    <button id="updateBtn" class="btn btn-primary">GÜNCELLEE</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        var updateCommentUrl = "@Url.Action("UpdateCategory", "Category")";

        $(() => clearForm())
        function updateForm(Id) {
            fetch('/Category/CategoryDetails?Id=' + Id) /*fetch() fonksiyonu ile sunucudan veri almak için bir GET isteği gönderir*/
                .then(res => res.json()) /*.then(res => res.json()) ifadesi, isteğin yanıtını JSON formatında ayrıştırmak i*/
                .then(res => {
                    $('#Id').val(res.id)
                    $('#Name').val(res.name)
                })
            $('#saveBtn').hide();
            $('#updateBtn').show();
            $('#CategoryModal').modal('show');
        }
        function clearForm() {
            $('#Id').val(null)
            $('#Name').val(null)
            $('#saveBtn').show();
            $('#updateBtn').hide();
        }
        function addForm() {
            $('#updateBtn').hide();
        }
        $('#updateBtn').click(function () {
            $.ajax({
                type: "POST",
                dataType: 'json',
                url: updateCommentUrl,
                cache: false,
                data: {
                    Id: $("#Id").val(),
                    Name: $("#Name").val()
                }
            });
        });

    </script>
}
