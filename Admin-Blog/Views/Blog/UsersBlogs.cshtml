@model IEnumerable<AdminBlog.Models.Blog>
@{
    ViewData["Title"] = "Author";
}

<h4>Burada herkes kendi blogunu görecek ve kendi id sine göre bri sorgu yapılacak. </h4>
<h4>Burada herkez kendi blog unu görüyordu. BU SAYFAYI SİL</h4>
<table class="table table-hover">
    <thead>
    <th scope="col">Id</th>
    <th scope="col">Name</th>
    <th scope="col"></th>
    </thead>
    <tbody>
        <a href="/Blog/Add" class="btn btn-success">Blog Ekle</a>

        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Title</td>
                <td>
                    @if (item.IsPublish)
                    {
                        <a class="btn btn-success" asp-route-id="@item.Id" asp-action="Publish">Yayınlandı</a>

                    }
                    else
                    {
                        <a class="btn btn-light" asp-route-id="@item.Id" asp-action="Publish">Yayınla</a>
                    }
                    <a class="btn btn-danger" onclick="$('#ConfirmModal').modal('show'); deleteForm(@item.Id);">Bloğu Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<div class="modal" id="ConfirmModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Silmeye Emin Misin?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Tıklamış olduğunuz blog silinecek onaylıyor musunuz?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="deleteBtn" data-dismiss="modal">Silmeyi Onayla</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>

